{{> header}}

<h1>{{title}}</h1>

<div id="main-content" class="container">
    <style>
        table,
        th,
        td {
            border: 1px solid;
        }

        table {
            border-collapse: collapse;
        }
    </style>

    <div id="main-area">
        <table>
            <thead>
                <tr>
                    <th>Stato Trolley</th>
                    <th>Posizione Trolley</th>
                    <th>Vetro Depositato</th>
                    <th>Plastica Depositata</th>
                    <th>Stato Led</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="trolleyState">home</td>
                    <td id="trolleyPosition">0,0</td>
                    <td><a id="depositedGlass">30</a>kg</td>
                    <td><a id="depositedPlastic">30</a>kg</td>
                    <td id="ledState">acceso</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

{{> footer}}